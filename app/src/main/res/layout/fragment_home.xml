<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/tvCovidDanasHR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvCovidDanasZUP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCovidDanasHR"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/tvCovidDanasZUP"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/text_home">


        <TextView
            android:id="@+id/tvMogucnost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/procjena"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_marginBottom="@dimen/marginSize"
            android:text="MoguÄ‡nost zaraze:"
            />

        <TextView
            android:id="@+id/procjena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="80sp"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/tvProsjek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/procjena"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/marginSize"
            />

        <TextView
            android:id="@+id/tvPreporuka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProsjek"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/marginSize"
            />

    </RelativeLayout>

</RelativeLayout>